<div class="container-centered">
  <form id="postform" class="postform" method="post" enctype="multipart/form-data">
    <div class="postform-group">
      <label for="name">Name</label>
      <input type="text" name="name" autocomplete="off">
    </div>
    <div class="postform-group">
      <label for="email">E-mail</label>
      <input type="text" name="email" autocomplete="off">
    </div>
    <div class="postform-group">
      <label for="subject">Subject</label>
      <input type="text" name="subject" autocomplete="off">
      <input type="submit" value="Submit">
    </div>
    <div class="postform-group">
      <label for="message">Message</label>
      <textarea name="message" autocomplete="off" cols="48" rows="4" maxlength="8192"></textarea>
    </div>
    <div class="postform-group">
      <label for="file">File</label>
      <input type="file" name="file" autocomplete="off" size="35">
    </div>
  </form>
</div>
